{% endblock %}
{% block stylesheets %}
     <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
     <style>
        table td>div{
            display:flex;
            justify-content:center;
            align-items:center;
            text-align:center;
            width: 100px;
            height: 50px;
            border-radius: 5px;
        }
        .aucun{
            background-color:  #f0f0f0;
        }
