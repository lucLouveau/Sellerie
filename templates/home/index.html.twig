    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

    <script>
        var dataZones = {{ dataZones|json_encode|raw }};
        var dataEquipements = {{ dataEquipements|json_encode|raw }};

        createMap(dataZones, dataEquipements);
    </script>
    
    

    
    
